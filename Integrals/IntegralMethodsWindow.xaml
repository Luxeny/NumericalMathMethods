<Window x:Class="WpfApp1.IntegralMethodsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:oxy="http://oxyplot.org/wpf"
        xmlns:local="clr-namespace:WpfApp1"
        mc:Ignorable="d"
        Title="Integral • Numerical Integration"
        Height="1080" Width="1920"
        WindowStartupLocation="CenterScreen"
        FontFamily="Segoe UI">

    <Window.Resources>
        <!-- Converter stays -->
        <local:PrecisionFormatConverter x:Key="PrecisionFormatConverter"/>

        <!-- Palette -->
        <Color x:Key="C_Bg0">#0B1220</Color>
        <Color x:Key="C_Bg1">#0F1A2E</Color>
        <Color x:Key="C_Card">#121F39</Color>
        <Color x:Key="C_Stroke">#233A66</Color>
        <Color x:Key="C_Text1">#EAF0FF</Color>
        <Color x:Key="C_Text2">#A9B6D3</Color>
        <Color x:Key="C_Accent">#7C4DFF</Color>
        <Color x:Key="C_Accent2">#00D4FF</Color>

        <SolidColorBrush x:Key="Bg0" Color="{StaticResource C_Bg0}" />
        <SolidColorBrush x:Key="Bg1" Color="{StaticResource C_Bg1}" />
        <SolidColorBrush x:Key="Card" Color="{StaticResource C_Card}" />
        <SolidColorBrush x:Key="Stroke" Color="{StaticResource C_Stroke}" />
        <SolidColorBrush x:Key="Text1" Color="{StaticResource C_Text1}" />
        <SolidColorBrush x:Key="Text2" Color="{StaticResource C_Text2}" />
        <SolidColorBrush x:Key="Accent" Color="{StaticResource C_Accent}" />
        <SolidColorBrush x:Key="Accent2" Color="{StaticResource C_Accent2}" />

        <CornerRadius x:Key="R12">12</CornerRadius>

        <Style TargetType="{x:Type TextBlock}">
            <Setter Property="Foreground" Value="{StaticResource Text1}"/>
        </Style>

        <!-- Cards -->
        <Style x:Key="CardBorder" TargetType="Border">
            <Setter Property="Background" Value="{StaticResource Card}"/>
            <Setter Property="BorderBrush" Value="{StaticResource Stroke}"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="CornerRadius" Value="{StaticResource R12}"/>
            <Setter Property="Padding" Value="18"/>
        </Style>

        <Style x:Key="FieldCaption" TargetType="TextBlock">
            <Setter Property="Foreground" Value="{StaticResource Text2}"/>
            <Setter Property="FontSize" Value="12"/>
            <Setter Property="Margin" Value="0,0,0,6"/>
        </Style>

        <Style x:Key="FieldBox" TargetType="TextBox">
            <Setter Property="Background" Value="{StaticResource Bg1}"/>
            <Setter Property="Foreground" Value="{StaticResource Text1}"/>
            <Setter Property="BorderBrush" Value="{StaticResource Stroke}"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Padding" Value="10,7"/>
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="CaretBrush" Value="{StaticResource Accent2}"/>
        </Style>

        <Style x:Key="FieldCombo" TargetType="ComboBox">
            <Setter Property="Background" Value="{StaticResource Bg1}"/>
            <Setter Property="Foreground" Value="{StaticResource Text1}"/>
            <Setter Property="BorderBrush" Value="{StaticResource Stroke}"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Padding" Value="8,6"/>
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="Height" Value="34"/>
        </Style>

        <Style x:Key="DarkCheckBox" TargetType="CheckBox">
            <Setter Property="Foreground" Value="{StaticResource Text1}"/>
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="Margin" Value="0,0,14,0"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
        </Style>

        <!-- Buttons -->
        <Style x:Key="PrimaryButton" TargetType="Button">
            <Setter Property="Foreground" Value="{StaticResource Text1}"/>
            <Setter Property="Background" Value="{StaticResource Accent}"/>
            <Setter Property="BorderBrush" Value="{StaticResource Accent}"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Padding" Value="14,10"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="{x:Type Button}">
                        <Border x:Name="B"
                                Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="{StaticResource R12}">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                <Border Grid.Column="0" Width="10" Background="{StaticResource Accent2}" Opacity="0.9"
                                        CornerRadius="12,0,0,12"/>
                                <ContentPresenter Grid.Column="1" Margin="14,0,14,0"
                                                  HorizontalAlignment="Center"
                                                  VerticalAlignment="Center"/>
                            </Grid>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="B" Property="Effect">
                                    <Setter.Value>
                                        <DropShadowEffect BlurRadius="18" ShadowDepth="0" Color="#5500D4FF"/>
                                    </Setter.Value>
                                </Setter>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter TargetName="B" Property="Opacity" Value="0.88"/>
                            </Trigger>
                            <Trigger Property="IsEnabled" Value="False">
                                <Setter TargetName="B" Property="Opacity" Value="0.45"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="GhostButton" TargetType="Button">
            <Setter Property="Foreground" Value="{StaticResource Text1}"/>
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="BorderBrush" Value="{StaticResource Stroke}"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Padding" Value="12,10"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="{x:Type Button}">
                        <Border x:Name="B"
                                Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="{StaticResource R12}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="B" Property="Background" Value="#1AFFFFFF"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter TargetName="B" Property="Background" Value="#12FFFFFF"/>
                            </Trigger>
                            <Trigger Property="IsEnabled" Value="False">
                                <Setter TargetName="B" Property="Opacity" Value="0.45"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- "Danger" and "Accent alt" for two special buttons -->
        <Style x:Key="DangerButton" TargetType="Button" BasedOn="{StaticResource GhostButton}">
            <Setter Property="BorderBrush" Value="#FF4D4D"/>
            <Setter Property="Foreground" Value="#FFD6D6"/>
        </Style>

        <Style x:Key="AltButton" TargetType="Button" BasedOn="{StaticResource GhostButton}">
            <Setter Property="BorderBrush" Value="#B88CFF"/>
            <Setter Property="Foreground" Value="{StaticResource Text1}"/>
        </Style>

        <!-- Menu (dark flat) -->
        <Style TargetType="{x:Type Menu}">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Foreground" Value="{StaticResource Text1}"/>
        </Style>

        <Style TargetType="{x:Type MenuItem}">
            <Setter Property="Foreground" Value="{StaticResource Text1}"/>
            <Setter Property="Padding" Value="10,6"/>
        </Style>

        <Style TargetType="{x:Type Separator}">
            <Setter Property="Margin" Value="8,6"/>
            <Setter Property="Background" Value="{StaticResource Stroke}"/>
        </Style>

        <!-- Small "code-like" values -->
        <Style x:Key="MonoValue" TargetType="TextBlock">
            <Setter Property="FontFamily" Value="Consolas"/>
            <Setter Property="Foreground" Value="{StaticResource Text1}"/>
        </Style>
    </Window.Resources>

    <Window.Background>
        <RadialGradientBrush Center="0.2,0.1" GradientOrigin="0.2,0.1" RadiusX="1.1" RadiusY="1.0">
            <GradientStop Color="#16264A" Offset="0"/>
            <GradientStop Color="#0B1220" Offset="0.55"/>
            <GradientStop Color="#070C16" Offset="1"/>
        </RadialGradientBrush>
    </Window.Background>

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="320"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <!-- Left rail: stacked cards (no "DockPanel squeeze") -->
        <Border Grid.Column="0"
        Background="#0B1428"
        BorderBrush="{StaticResource Stroke}"
        BorderThickness="0,0,1,0">
            <ScrollViewer VerticalScrollBarVisibility="Auto"
                  HorizontalScrollBarVisibility="Disabled">
                <StackPanel Margin="16">

                    <StackPanel Margin="0,0,0,14">
                        <TextBlock Text="Integration" FontSize="22" FontWeight="SemiBold"/>
                        <TextBlock Text="∫[a,b] f(x) dx • методы прямоугольников, трапеций, Симпсона"
                           Foreground="{StaticResource Text2}" TextWrapping="Wrap" Margin="0,6,0,0"/>
                    </StackPanel>

                    <!-- Menu card -->
                    <Border Style="{StaticResource CardBorder}" Padding="10" Margin="0,0,0,14">
                        <Menu>
                            <MenuItem Header="Файл">
                                <MenuItem Header="Рассчитать" Click="Calculate_Click" InputGestureText="F5" Foreground="#FF08111F"/>
                                <Separator/>
                                <MenuItem Header="Очистить всё" Click="ClearAll_Click" Foreground="#FF08111F"/>
                                <Separator/>
                                <MenuItem Header="Выход" Click="Exit_Click" Foreground="#FF08111F"/>
                            </MenuItem>
                            <MenuItem Header="Режим">
                                <MenuItem Header="Пошаговый режим" Click="StartStepByStep_Click" Foreground="#FF08111F"/>
                                <MenuItem Header="Следующий шаг" Name="miNextStep" Click="NextStep_Click" IsEnabled="False" Foreground="#FF08111F"/>
                                <MenuItem Header="Сбросить шаги" Click="ResetSteps_Click" Foreground="#FF08111F"/>
                                <Separator/>
                                <MenuItem Header="Случайные данные" Click="GenerateRandomData_Click" Foreground="#FF08111F"/>
                            </MenuItem>
                            <MenuItem Header="Вид">
                                <MenuItem Header="Показать историю разбиений" Foreground="#FF08111F" IsCheckable="True" Name="miShowHistory"
                                  Checked="ShowHistory_Checked" Unchecked="ShowHistory_Unchecked"/>
                                <MenuItem Header="Показать сетку" Foreground="#FF08111F" IsCheckable="True" Name="miShowGrid" IsChecked="True"
                                  Click="ToggleGrid_Click"/>
                            </MenuItem>
                            <MenuItem Header="Справка">
                                <MenuItem Header="Синтаксис функций" Foreground="#FF08111F" Click="Help_Click"/>
                                <MenuItem Header="О методах интегрирования" Foreground="#FF08111F" Click="AboutMethods_Click"/>
                            </MenuItem>
                        </Menu>
                    </Border>

                    <!-- Actions card -->
                    <Border Style="{StaticResource CardBorder}" Padding="14" Margin="0,0,0,14">
                        <StackPanel>
                            <TextBlock Text="Быстрые действия" Foreground="{StaticResource Text2}" Margin="0,0,0,10"/>
                            <Button Name="btnCalculate" Content="Рассчитать (F5)" Style="{StaticResource PrimaryButton}" Click="Calculate_Click"/>
                            <Button Name="btnStepByStep" Content="Пошаговый режим" Style="{StaticResource GhostButton}" Margin="0,10,0,0"
                            Click="StartStepByStep_Click"/>
                            <Button Name="btnNextStep" Content="Следующий шаг" Style="{StaticResource GhostButton}" Margin="0,10,0,0"
                            Click="NextStep_Click" IsEnabled="False"/>
                            <Button Name="btnRandom" Content="Случайные данные" Style="{StaticResource AltButton}" Margin="0,10,0,0"
                            Click="GenerateRandomData_Click"/>
                            <Button Name="btnClear" Content="Очистить всё" Style="{StaticResource DangerButton}" Margin="0,10,0,0"
                            Click="ClearAll_Click"/>
                        </StackPanel>
                    </Border>

                    <!-- Status card -->
                    <Border Style="{StaticResource CardBorder}" Padding="14">
                        <StackPanel>
                            <TextBlock Text="Статус" Foreground="{StaticResource Text2}" Margin="0,0,0,8"/>
                            <TextBlock Name="lblStatus" Text="Готов к работе" TextWrapping="Wrap"/>
                            <TextBlock Name="lblTime" Text="Время: 0 мс" Foreground="{StaticResource Text2}" Margin="0,8,0,0"/>
                        </StackPanel>
                    </Border>

                </StackPanel>
            </ScrollViewer>
        </Border>


        <!-- Main content -->
        <Grid Grid.Column="1" Margin="18">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- Header -->
            <Border Grid.Row="0" Style="{StaticResource CardBorder}" Padding="16" Margin="0,0,0,14">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <StackPanel>
                        <TextBlock Text="Вычисление определенного интеграла" FontSize="20" FontWeight="SemiBold"/>
                        <TextBlock Name="lblIntegralBounds"
                                   Text="∫[0, 3.14] sin(x)dx"
                                   Foreground="{StaticResource Text2}" Margin="0,6,0,0"/>
                    </StackPanel>

                    <Border Grid.Column="1" Background="#1A00D4FF" BorderBrush="{StaticResource Accent2}" BorderThickness="1"
                            CornerRadius="999" Padding="10,6" VerticalAlignment="Center">
                        <TextBlock Name="lblCurrentMode" Text="Режим: фиксированное N"/>
                    </Border>
                </Grid>
            </Border>

            <!-- Inputs -->
            <Border Grid.Row="1" Style="{StaticResource CardBorder}" Margin="0,0,0,14">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="360"/>
                    </Grid.ColumnDefinitions>

                    <!-- Left: fields -->
                    <StackPanel Grid.Column="0" Margin="0,0,16,0">
                        <TextBlock Text="Функция f(x)" Style="{StaticResource FieldCaption}"/>
                        <TextBox Name="txtFunction" Style="{StaticResource FieldBox}" Text="sin(x)"
                                 ToolTip="Например: sin(x), x^2+1, exp(-x^2)"/>

                        <Grid Margin="0,14,0,0">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>

                            <StackPanel Grid.Column="0" Margin="0,0,12,0">
                                <TextBlock Text="a" Style="{StaticResource FieldCaption}"/>
                                <TextBox Name="txtA" Style="{StaticResource FieldBox}" Text="0"/>
                            </StackPanel>

                            <StackPanel Grid.Column="1" Margin="0,0,12,0">
                                <TextBlock Text="b" Style="{StaticResource FieldCaption}"/>
                                <TextBox Name="txtB" Style="{StaticResource FieldBox}" Text="3.14159"/>
                            </StackPanel>

                            <StackPanel Grid.Column="2">
                                <TextBlock Text="ε (точность)" Style="{StaticResource FieldCaption}"/>
                                <TextBox Name="txtEpsilon" Style="{StaticResource FieldBox}" Text="0.0001"
                                         ToolTip="Требуемая точность (влияет на формат/число знаков)"/>
                            </StackPanel>
                        </Grid>

                        <Grid Margin="0,14,0,0">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="220"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>

                            <StackPanel Grid.Column="0">
                                <TextBlock Text="Разбиения N" Style="{StaticResource FieldCaption}"/>
                                <DockPanel LastChildFill="True">
                                    <TextBox Name="txtN" Style="{StaticResource FieldBox}" Text="10" Width="120"
                                             ToolTip="Количество разбиений"/>
                                    <CheckBox Name="cbAutoN" Content="Авто"
                                              Style="{StaticResource DarkCheckBox}"
                                              Margin="12,0,0,0"
                                              Checked="AutoNCheckBox_Checked"
                                              Unchecked="AutoNCheckBox_Unchecked"/>
                                </DockPanel>
                            </StackPanel>

                            <StackPanel Grid.Column="1" Margin="16,0,0,0">
                                <TextBlock Text="Методы" Style="{StaticResource FieldCaption}"/>
                                <WrapPanel>
                                    <CheckBox Name="cbRectLeft" Content="Прямоуг. (лев.)" Style="{StaticResource DarkCheckBox}" IsChecked="True"/>
                                    <CheckBox Name="cbRectRight" Content="Прямоуг. (прав.)" Style="{StaticResource DarkCheckBox}"/>
                                    <CheckBox Name="cbRectMid" Content="Прямоуг. (сред.)" Style="{StaticResource DarkCheckBox}"/>
                                    <CheckBox Name="cbTrapezoid" Content="Трапеций" Style="{StaticResource DarkCheckBox}" IsChecked="True"/>
                                    <CheckBox Name="cbSimpson" Content="Симпсона" Style="{StaticResource DarkCheckBox}" IsChecked="True"/>
                                </WrapPanel>
                            </StackPanel>
                        </Grid>
                    </StackPanel>

                    <!-- Right: run info -->
                    <Border Grid.Column="1"
                            Background="#0DFFFFFF"
                            BorderBrush="{StaticResource Stroke}"
                            BorderThickness="1"
                            CornerRadius="{StaticResource R12}"
                            Padding="14">
                        <StackPanel>
                            <TextBlock Text="Информация о вычислении" FontWeight="SemiBold" FontSize="14"/>
                            <TextBlock Name="lblStepInfo" Text="-" Foreground="{StaticResource Text2}" Margin="0,10,0,0" TextWrapping="Wrap"/>
                            <TextBlock Name="tbModeInfo" Text="Режим: фиксированное N" Foreground="{StaticResource Text2}" Margin="0,8,0,0"/>
                            <TextBlock Name="tbPrecisionInfo" Text="Точность: 0.0001" Foreground="{StaticResource Text2}" Margin="0,8,0,0"/>
                        </StackPanel>
                    </Border>
                </Grid>
            </Border>

            <!-- Plot + Results -->
            <Grid Grid.Row="2" Margin="0,0,0,14">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="420"/>
                </Grid.ColumnDefinitions>

                <!-- Plot -->
                <Border Grid.Column="0" Style="{StaticResource CardBorder}" Padding="12" Margin="0,0,14,0">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>

                        <DockPanel Grid.Row="0" Margin="6,4,6,10">
                            <TextBlock Text="График и визуализация" FontWeight="SemiBold" FontSize="14" DockPanel.Dock="Left"/>
                            <TextBlock Text="OxyPlot" Foreground="{StaticResource Text2}" DockPanel.Dock="Right"/>
                        </DockPanel>

                        <Border Grid.Row="1" Background="#08111F" BorderBrush="{StaticResource Stroke}" BorderThickness="1"
                                CornerRadius="10" Padding="8">
                            <oxy:PlotView Name="plotView" Margin="0"/>
                        </Border>

                        <!-- History panel (kept Name/Visibility behavior) -->
                        <Border Grid.Row="2"
                                Name="historyPanel"
                                Background="#08111F"
                                BorderBrush="{StaticResource Stroke}"
                                BorderThickness="1"
                                CornerRadius="10"
                                Padding="10"
                                Margin="0,10,0,0"
                                Visibility="Collapsed">
                            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                                <TextBlock Text="История разбиений:" Foreground="{StaticResource Text2}" VerticalAlignment="Center" Margin="0,0,10,0"/>
                                <ComboBox Name="cmbHistoryN" Width="140" SelectionChanged="HistoryN_SelectionChanged"
                                          Style="{StaticResource FieldCombo}"/>
                                <TextBlock Name="lblHistoryValue" Margin="12,0,0,0" VerticalAlignment="Center" FontWeight="SemiBold"/>
                            </StackPanel>
                        </Border>
                    </Grid>
                </Border>

                <!-- Results -->
                <Border Grid.Column="1" Style="{StaticResource CardBorder}">
                    <ScrollViewer VerticalScrollBarVisibility="Auto">
                        <StackPanel>
                            <TextBlock Text="Результаты вычислений" FontSize="16" FontWeight="SemiBold"/>
                            <TextBlock Text="Быстрые значения + сравнение методов" Foreground="{StaticResource Text2}" Margin="0,6,0,14"/>

                            <Border Background="#0DFFFFFF" BorderBrush="{StaticResource Stroke}" BorderThickness="1"
                                    CornerRadius="10" Padding="12" Margin="0,0,0,12">
                                <StackPanel>
                                    <TextBlock Text="Значения интеграла:" FontWeight="SemiBold"/>
                                    <StackPanel Name="spResults" Margin="0,10,0,0"/>
                                </StackPanel>
                            </Border>

                            <Border Background="#08111F" BorderBrush="{StaticResource Stroke}" BorderThickness="1"
                                    CornerRadius="10" Padding="12" Margin="0,0,0,12">
                                <StackPanel>
                                    <TextBlock Text="Сравнение методов" FontWeight="SemiBold" Margin="0,0,0,10"/>
                                    <Grid>
                                        <Grid.RowDefinitions>
                                            <RowDefinition Height="Auto"/>
                                            <RowDefinition Height="Auto"/>
                                            <RowDefinition Height="Auto"/>
                                            <RowDefinition Height="Auto"/>
                                            <RowDefinition Height="Auto"/>
                                            <RowDefinition Height="Auto"/>
                                        </Grid.RowDefinitions>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="Auto"/>
                                        </Grid.ColumnDefinitions>

                                        <TextBlock Grid.Row="0" Grid.Column="0" Text="Метод" Foreground="{StaticResource Text2}" FontWeight="SemiBold"/>
                                        <TextBlock Grid.Row="0" Grid.Column="1" Text="Значение" Foreground="{StaticResource Text2}" FontWeight="SemiBold"/>

                                        <TextBlock Grid.Row="1" Grid.Column="0" Text="Прямоуг. (лев.)" Foreground="{StaticResource Text2}" Margin="0,8,0,0"/>
                                        <TextBlock Grid.Row="1" Grid.Column="1" Name="tbRectLeft" Text="-" Style="{StaticResource MonoValue}" Margin="0,8,0,0"/>

                                        <TextBlock Grid.Row="2" Grid.Column="0" Text="Прямоуг. (прав.)" Foreground="{StaticResource Text2}" Margin="0,8,0,0"/>
                                        <TextBlock Grid.Row="2" Grid.Column="1" Name="tbRectRight" Text="-" Style="{StaticResource MonoValue}" Margin="0,8,0,0"/>

                                        <TextBlock Grid.Row="3" Grid.Column="0" Text="Прямоуг. (сред.)" Foreground="{StaticResource Text2}" Margin="0,8,0,0"/>
                                        <TextBlock Grid.Row="3" Grid.Column="1" Name="tbRectMid" Text="-" Style="{StaticResource MonoValue}" Margin="0,8,0,0"/>

                                        <TextBlock Grid.Row="4" Grid.Column="0" Text="Трапеций" Foreground="{StaticResource Text2}" Margin="0,8,0,0"/>
                                        <TextBlock Grid.Row="4" Grid.Column="1" Name="tbTrapezoid" Text="-" Style="{StaticResource MonoValue}" Margin="0,8,0,0"/>

                                        <TextBlock Grid.Row="5" Grid.Column="0" Text="Симпсона" Foreground="{StaticResource Text2}" Margin="0,8,0,0"/>
                                        <TextBlock Grid.Row="5" Grid.Column="1" Name="tbSimpson" Text="-" Style="{StaticResource MonoValue}" Margin="0,8,0,0"/>
                                    </Grid>
                                </StackPanel>
                            </Border>

                            <Border BorderBrush="#2BE38B" BorderThickness="1"
                                    Background="#0D2BE38B"
                                    CornerRadius="10"
                                    Padding="12">
                                <StackPanel>
                                    <TextBlock Text="Наиболее точный результат" FontWeight="SemiBold"/>
                                    <Grid Margin="0,10,0,0">
                                        <Grid.RowDefinitions>
                                            <RowDefinition Height="Auto"/>
                                            <RowDefinition Height="Auto"/>
                                            <RowDefinition Height="Auto"/>
                                        </Grid.RowDefinitions>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="120"/>
                                            <ColumnDefinition Width="*"/>
                                        </Grid.ColumnDefinitions>

                                        <TextBlock Grid.Row="0" Grid.Column="0" Text="Метод" Foreground="{StaticResource Text2}"/>
                                        <TextBlock Grid.Row="0" Grid.Column="1" Name="tbOptimalMethod" Text="-" Style="{StaticResource MonoValue}"/>

                                        <TextBlock Grid.Row="1" Grid.Column="0" Text="Значение" Foreground="{StaticResource Text2}" Margin="0,8,0,0"/>
                                        <TextBlock Grid.Row="1" Grid.Column="1" Name="tbOptimalValue" Text="-" Style="{StaticResource MonoValue}" Margin="0,8,0,0"/>

                                        <TextBlock Grid.Row="2" Grid.Column="0" Text="Разбиений" Foreground="{StaticResource Text2}" Margin="0,8,0,0"/>
                                        <TextBlock Grid.Row="2" Grid.Column="1" Name="tbOptimalN" Text="-" Style="{StaticResource MonoValue}" Margin="0,8,0,0"/>
                                    </Grid>
                                </StackPanel>
                            </Border>
                        </StackPanel>
                    </ScrollViewer>
                </Border>
            </Grid>

            <!-- Bottom status bar (kept, but dark) -->
            <Border Grid.Row="3"
                    Background="#0B1428"
                    BorderBrush="{StaticResource Stroke}"
                    BorderThickness="1"
                    CornerRadius="{StaticResource R12}"
                    Padding="12">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <TextBlock Text="Готово" Foreground="{StaticResource Text2}" VerticalAlignment="Center"/>

