<Window x:Class="WpfApp1.BisectionMethodWindow"
       xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
       xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
       xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
       xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
       xmlns:oxy="http://oxyplot.org/wpf"
       mc:Ignorable="d"
       Title="Bisection • Root Finder"
       Height="1079.5" Width="1920"
       WindowStartupLocation="CenterScreen"
       Closing="Window_Closing"
       FontFamily="Segoe UI"
       Loaded="Window_Loaded">

    <Window.Resources>
        <!-- Colors / brushes -->
        <Color x:Key="C_Bg0">#0B1220</Color>
        <Color x:Key="C_Bg1">#0F1A2E</Color>
        <Color x:Key="C_Card">#121F39</Color>
        <Color x:Key="C_Stroke">#233A66</Color>
        <Color x:Key="C_Text1">#EAF0FF</Color>
        <Color x:Key="C_Text2">#A9B6D3</Color>
        <Color x:Key="C_Accent">#7C4DFF</Color>
        <Color x:Key="C_Accent2">#00D4FF</Color>

        <SolidColorBrush x:Key="Bg0" Color="{StaticResource C_Bg0}" />
        <SolidColorBrush x:Key="Bg1" Color="{StaticResource C_Bg1}" />
        <SolidColorBrush x:Key="Card" Color="{StaticResource C_Card}" />
        <SolidColorBrush x:Key="Stroke" Color="{StaticResource C_Stroke}" />
        <SolidColorBrush x:Key="Text1" Color="{StaticResource C_Text1}" />
        <SolidColorBrush x:Key="Text2" Color="{StaticResource C_Text2}" />
        <SolidColorBrush x:Key="Accent" Color="{StaticResource C_Accent}" />
        <SolidColorBrush x:Key="Accent2" Color="{StaticResource C_Accent2}" />

        <CornerRadius x:Key="R12">12</CornerRadius>

        <!-- Base text -->
        <Style TargetType="{x:Type TextBlock}">
            <Setter Property="Foreground" Value="{StaticResource Text1}"/>
        </Style>

        <!-- TextBox: new look -->
        <Style x:Key="FieldBox" TargetType="TextBox">
            <Setter Property="Background" Value="{StaticResource Bg1}"/>
            <Setter Property="Foreground" Value="{StaticResource Text1}"/>
            <Setter Property="BorderBrush" Value="{StaticResource Stroke}"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Padding" Value="10,7"/>
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="CaretBrush" Value="{StaticResource Accent2}"/>
        </Style>

        <!-- A small label over fields -->
        <Style x:Key="FieldCaption" TargetType="TextBlock">
            <Setter Property="Foreground" Value="{StaticResource Text2}"/>
            <Setter Property="FontSize" Value="12"/>
            <Setter Property="Margin" Value="0,0,0,6"/>
        </Style>

        <!-- Primary button: different from your "ModernButton" -->
        <Style x:Key="PrimaryButton" TargetType="Button">
            <Setter Property="Foreground" Value="{StaticResource Text1}"/>
            <Setter Property="Background" Value="{StaticResource Accent}"/>
            <Setter Property="BorderBrush" Value="{StaticResource Accent}"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Padding" Value="14,10"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="{x:Type Button}">
                        <Border x:Name="B"
                                Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="{StaticResource R12}">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                <Border Grid.Column="0" Width="10" Background="{StaticResource Accent2}" Opacity="0.9"
                                        CornerRadius="12,0,0,12"/>
                                <ContentPresenter Grid.Column="1" Margin="14,0,14,0"
                                                  HorizontalAlignment="Center"
                                                  VerticalAlignment="Center"/>
                            </Grid>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="B" Property="Effect">
                                    <Setter.Value>
                                        <DropShadowEffect BlurRadius="18" ShadowDepth="0" Color="#5500D4FF"/>
                                    </Setter.Value>
                                </Setter>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter TargetName="B" Property="Opacity" Value="0.88"/>
                            </Trigger>
                            <Trigger Property="IsEnabled" Value="False">
                                <Setter TargetName="B" Property="Opacity" Value="0.45"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Secondary button (for "Clear" etc if you decide to add) -->
        <Style x:Key="GhostButton" TargetType="Button">
            <Setter Property="Foreground" Value="{StaticResource Text1}"/>
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="BorderBrush" Value="{StaticResource Stroke}"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Padding" Value="12,10"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="{x:Type Button}">
                        <Border x:Name="B"
                                Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="{StaticResource R12}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="B" Property="Background" Value="#1AFFFFFF"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter TargetName="B" Property="Background" Value="#12FFFFFF"/>
                            </Trigger>
                            <Trigger Property="IsEnabled" Value="False">
                                <Setter TargetName="B" Property="Opacity" Value="0.45"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Card container -->
        <Style x:Key="CardBorder" TargetType="Border">
            <Setter Property="Background" Value="{StaticResource Card}"/>
            <Setter Property="BorderBrush" Value="{StaticResource Stroke}"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="CornerRadius" Value="{StaticResource R12}"/>
            <Setter Property="Padding" Value="18"/>
        </Style>

        <!-- Make Menu look different (dark, flat) -->
        <Style TargetType="{x:Type Menu}">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Foreground" Value="{StaticResource Text1}"/>
        </Style>
        <Style TargetType="{x:Type MenuItem}">
            <Setter Property="Foreground" Value="{StaticResource Text1}"/>
            <Setter Property="Padding" Value="10,6"/>
        </Style>
    </Window.Resources>

    <Window.Background>
        <RadialGradientBrush Center="0.2,0.1" GradientOrigin="0.2,0.1" RadiusX="1.1" RadiusY="1.0">
            <GradientStop Color="#16264A" Offset="0"/>
            <GradientStop Color="#0B1220" Offset="0.55"/>
            <GradientStop Color="#070C16" Offset="1"/>
        </RadialGradientBrush>
    </Window.Background>

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="300"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <!-- Left rail: stacked cards (no DockPanel squeeze) -->
        <Border Grid.Column="0"
        Background="#0B1428"
        BorderBrush="{StaticResource Stroke}"
        BorderThickness="0,0,1,0">
            <ScrollViewer VerticalScrollBarVisibility="Auto"
                  HorizontalScrollBarVisibility="Disabled">
                <StackPanel Margin="16">

                    <!-- Brand / header -->
                    <StackPanel Margin="0,0,0,14">
                        <TextBlock Text="Root Finder" FontSize="22" FontWeight="SemiBold"/>
                        <TextBlock Text="Bisection (dichotomy) method"
                           Foreground="{StaticResource Text2}" Margin="0,6,0,0"/>
                    </StackPanel>

                    <!-- Optional classic menu (оставил, если нужно) -->
                    <Border Style="{StaticResource CardBorder}" Padding="10" Margin="0,0,0,14">
                        <Menu Opacity="0.9">
                            <MenuItem Header="Файл">
                                <MenuItem Header="Найти корень" Foreground="#FF08111F" Click="Calculate_Click"/>
                                <MenuItem Header="Очистить" Foreground="#FF08111F" Click="Clear_Click"/>
                                <Separator/>
                                <MenuItem Header="Справка по функциям" Foreground="#FF08111F" Click="ShowHelp_Click"/>
                                <Separator/>
                                <MenuItem Header="Выход" Foreground="#FF08111F" Click="Exit_Click"/>
                            </MenuItem>
                        </Menu>
                    </Border>

                    <!-- Actions -->
                    <Border Style="{StaticResource CardBorder}" Padding="14" Margin="0,0,0,14">
                        <StackPanel>
                            <TextBlock Text="Действия" Foreground="{StaticResource Text2}" Margin="0,0,0,10"/>
                            <Button Content="Найти корень" Style="{StaticResource PrimaryButton}" Click="Calculate_Click"/>
                            <Button Content="Очистить" Style="{StaticResource GhostButton}" Margin="0,10,0,0" Click="Clear_Click"/>
                            <Button Content="Справка по функциям" Style="{StaticResource GhostButton}" Margin="0,10,0,0" Click="ShowHelp_Click"/>
                            <Button Content="Выход" Style="{StaticResource GhostButton}" Margin="0,10,0,0" Click="Exit_Click"/>
                        </StackPanel>
                    </Border>

                    <!-- Hint -->
                    <Border Style="{StaticResource CardBorder}" Padding="14" Margin="0,0,0,14">
                        <StackPanel>
                            <TextBlock Text="Подсказка" Foreground="{StaticResource Text2}" Margin="0,0,0,8"/>
                            <TextBlock Text="Функции: sin, cos, tan, exp, sqrt, abs, log, log10, pow"
                               TextWrapping="Wrap" Foreground="{StaticResource Text1}" Opacity="0.9"/>
                            <TextBlock Text="Пример: x^3 - 2*x^2 + x - 5"
                               Margin="0,10,0,0" Foreground="{StaticResource Text2}" TextWrapping="Wrap"/>
                        </StackPanel>
                    </Border>

                </StackPanel>
            </ScrollViewer>
        </Border>


        <!-- Main content -->
        <Grid Grid.Column="1" Margin="18">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <!-- Top header (different from your centered title) -->
            <Border Style="{StaticResource CardBorder}" Grid.Row="0" Padding="16" Margin="0,0,0,14">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>
                    <StackPanel>
                        <TextBlock Text="Метод дихотомии" FontSize="20" FontWeight="SemiBold"/>
                        <TextBlock Text="Ищем x, где f(x)=0 на [a,b] с заданной точностью"
                                   Foreground="{StaticResource Text2}" Margin="0,6,0,0"/>
                    </StackPanel>
                </Grid>
            </Border>

            <!-- Input card (new layout: 2 columns, no GroupBox) -->
            <Border Style="{StaticResource CardBorder}" Grid.Row="1" Margin="0,0,0,14">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="320"/>
                    </Grid.ColumnDefinitions>

                    <!-- Left: function -->
                    <StackPanel Grid.Column="0" Margin="0,0,16,0">
                        <TextBlock Text="Функция f(x)" Style="{StaticResource FieldCaption}"/>
                        <TextBox Name="txtFunction"
                                 Style="{StaticResource FieldBox}"
                                 Text="x^3 - 2*x^2 + x - 5"
                                 ToolTip="Введите выражение. Примеры: x^2, sin(x), exp(x)"/>

                        <Grid Margin="0,14,0,0">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>

                            <StackPanel Grid.Column="0" Margin="0,0,12,0">
                                <TextBlock Text="a (начало)" Style="{StaticResource FieldCaption}"/>
                                <TextBox Name="txtA" Style="{StaticResource FieldBox}" Text="1"/>
                            </StackPanel>

                            <StackPanel Grid.Column="1" Margin="0,0,12,0">
                                <TextBlock Text="b (конец)" Style="{StaticResource FieldCaption}"/>
                                <TextBox Name="txtB" Style="{StaticResource FieldBox}" Text="3"/>
                            </StackPanel>

                            <StackPanel Grid.Column="2">
                                <TextBlock Text="ε (точность)" Style="{StaticResource FieldCaption}"/>
                                <TextBox Name="txtEpsilon" Style="{StaticResource FieldBox}" Text="0,001"/>
                            </StackPanel>
                        </Grid>
                    </StackPanel>

                    <!-- Right: action area -->
                    <Border Grid.Column="1"
                            Background="#0DFFFFFF"
                            BorderBrush="{StaticResource Stroke}"
                            BorderThickness="1"
                            CornerRadius="{StaticResource R12}"
                            Padding="14">
                        <StackPanel>
                            <TextBlock Text="Запуск" FontWeight="SemiBold" FontSize="14"/>
                            <TextBlock Text="Проверьте интервал: на концах должна быть смена знака."
                                       Foreground="{StaticResource Text2}" TextWrapping="Wrap"
                                       Margin="0,8,0,12"/>
                            <Button Name="btnCalculate"
                                    Content="Вычислить"
                                    Style="{StaticResource PrimaryButton}"
                                    Click="Calculate_Click"/>
                        </StackPanel>
                    </Border>
                </Grid>
            </Border>

            <!-- Results + chart (new layout: chart first, results as right card) -->
            <Grid Grid.Row="2">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="360"/>
                </Grid.ColumnDefinitions>

                <Border Grid.Column="0" Style="{StaticResource CardBorder}" Padding="12" Margin="0,0,14,0">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                        </Grid.RowDefinitions>

                        <DockPanel Grid.Row="0" Margin="6,4,6,10">
                            <TextBlock Text="График функции" FontWeight="SemiBold" FontSize="14" DockPanel.Dock="Left"/>
                            <TextBlock Text="масштаб/панорамирование в OxyPlot" Foreground="{StaticResource Text2}" DockPanel.Dock="Right"/>
                        </DockPanel>

                        <Border Grid.Row="1" Background="#08111F" BorderBrush="{StaticResource Stroke}" BorderThickness="1"
                                CornerRadius="10" Padding="8">
                            <oxy:PlotView Name="plotView"
                                          Model="{Binding PlotModel}"
                                          HorizontalAlignment="Stretch"
                                          VerticalAlignment="Stretch"/>
                        </Border>
                    </Grid>
                </Border>

                <Border Grid.Column="1" Style="{StaticResource CardBorder}">
                    <StackPanel>
                        <TextBlock Text="Итоги" FontSize="16" FontWeight="SemiBold"/>
                        <TextBlock Text="Результаты поиска корня" Foreground="{StaticResource Text2}" Margin="0,6,0,14"/>

                        <Border Background="#0DFFFFFF" BorderBrush="{StaticResource Stroke}" BorderThickness="1"
                                CornerRadius="10" Padding="12" Margin="0,0,0,12">
                            <Grid>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                </Grid.RowDefinitions>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="120"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>

                                <TextBlock Grid.Row="0" Grid.Column="0" Text="Статус" Foreground="{StaticResource Text2}"/>
                                <TextBlock Grid.Row="0" Grid.Column="1" Name="lblResult" Text="—" FontWeight="SemiBold"/>

                                <TextBlock Grid.Row="1" Grid.Column="0" Text="Корень x" Foreground="{StaticResource Text2}" Margin="0,10,0,0"/>
                                <TextBlock Grid.Row="1" Grid.Column="1" Name="lblXValue" Text="—" Margin="0,10,0,0" FontWeight="SemiBold"/>

                                <TextBlock Grid.Row="2" Grid.Column="0" Text="f(x)" Foreground="{StaticResource Text2}" Margin="0,10,0,0"/>
                                <TextBlock Grid.Row="2" Grid.Column="1" Name="lblFXValue" Text="—" Margin="0,10,0,0" FontWeight="SemiBold"/>
                            </Grid>
                        </Border>

                        <TextBlock Text="Совет: если метод не сходится — попробуйте другой интервал или проверьте корректность f(x)."
                                   Foreground="{StaticResource Text2}" TextWrapping="Wrap"/>
                    </StackPanel>
                </Border>
            </Grid>
        </Grid>
    </Grid>
</Window>
