<Window x:Class="WpfApp1.CoordinateDescentWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:h="http://helix-toolkit.org/wpf"
        mc:Ignorable="d"
        Title="Coordinate Descent • 3D"
        Height="1080" Width="1920"
        MinWidth="1200" MinHeight="700"
        WindowStartupLocation="CenterScreen"
        WindowStyle="SingleBorderWindow"
        ResizeMode="CanResizeWithGrip"
        FontFamily="Segoe UI"
        SizeChanged="Window_SizeChanged">

    <Window.Resources>
        <!-- Palette -->
        <Color x:Key="C_Bg0">#0B1220</Color>
        <Color x:Key="C_Bg1">#0F1A2E</Color>
        <Color x:Key="C_Card">#121F39</Color>
        <Color x:Key="C_Stroke">#233A66</Color>
        <Color x:Key="C_Text1">#EAF0FF</Color>
        <Color x:Key="C_Text2">#A9B6D3</Color>
        <Color x:Key="C_Accent">#7C4DFF</Color>
        <Color x:Key="C_Accent2">#00D4FF</Color>

        <SolidColorBrush x:Key="Bg0" Color="{StaticResource C_Bg0}"/>
        <SolidColorBrush x:Key="Bg1" Color="{StaticResource C_Bg1}"/>
        <SolidColorBrush x:Key="Card" Color="{StaticResource C_Card}"/>
        <SolidColorBrush x:Key="Stroke" Color="{StaticResource C_Stroke}"/>
        <SolidColorBrush x:Key="Text1" Color="{StaticResource C_Text1}"/>
        <SolidColorBrush x:Key="Text2" Color="{StaticResource C_Text2}"/>
        <SolidColorBrush x:Key="Accent" Color="{StaticResource C_Accent}"/>
        <SolidColorBrush x:Key="Accent2" Color="{StaticResource C_Accent2}"/>

        <CornerRadius x:Key="R12">12</CornerRadius>

        <Style TargetType="{x:Type TextBlock}">
            <Setter Property="Foreground" Value="{StaticResource Text1}"/>
        </Style>

        <!-- Cards -->
        <Style x:Key="CardBorder" TargetType="Border">
            <Setter Property="Background" Value="{StaticResource Card}"/>
            <Setter Property="BorderBrush" Value="{StaticResource Stroke}"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="CornerRadius" Value="{StaticResource R12}"/>
            <Setter Property="Padding" Value="14"/>
        </Style>

        <Style x:Key="FieldCaption" TargetType="TextBlock">
            <Setter Property="Foreground" Value="{StaticResource Text2}"/>
            <Setter Property="FontSize" Value="12"/>
            <Setter Property="Margin" Value="0,0,0,6"/>
        </Style>

        <Style x:Key="FieldBox" TargetType="TextBox">
            <Setter Property="Background" Value="{StaticResource Bg1}"/>
            <Setter Property="Foreground" Value="{StaticResource Text1}"/>
            <Setter Property="BorderBrush" Value="{StaticResource Stroke}"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Padding" Value="10,7"/>
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="CaretBrush" Value="{StaticResource Accent2}"/>
            <Setter Property="Height" Value="34"/>
        </Style>

        <Style x:Key="FieldCombo" TargetType="ComboBox">
            <Setter Property="Background" Value="{StaticResource Bg1}"/>
            <Setter Property="Foreground" Value="{StaticResource Text1}"/>
            <Setter Property="BorderBrush" Value="{StaticResource Stroke}"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Padding" Value="8,6"/>
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="Height" Value="34"/>
        </Style>

        <!-- Buttons -->
        <Style x:Key="PrimaryButton" TargetType="Button">
            <Setter Property="Foreground" Value="{StaticResource Text1}"/>
            <Setter Property="Background" Value="{StaticResource Accent}"/>
            <Setter Property="BorderBrush" Value="{StaticResource Accent}"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Padding" Value="14,10"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="{x:Type Button}">
                        <Border x:Name="B"
                                Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="{StaticResource R12}">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="10"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                <Border Grid.Column="0" Background="{StaticResource Accent2}" CornerRadius="12,0,0,12"/>
                                <ContentPresenter Grid.Column="1" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                            </Grid>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="B" Property="Effect">
                                    <Setter.Value>
                                        <DropShadowEffect BlurRadius="18" ShadowDepth="0" Color="#5500D4FF"/>
                                    </Setter.Value>
                                </Setter>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter TargetName="B" Property="Opacity" Value="0.88"/>
                            </Trigger>
                            <Trigger Property="IsEnabled" Value="False">
                                <Setter TargetName="B" Property="Opacity" Value="0.45"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="GhostButton" TargetType="Button">
            <Setter Property="Foreground" Value="{StaticResource Text1}"/>
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="BorderBrush" Value="{StaticResource Stroke}"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Padding" Value="12,10"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="{x:Type Button}">
                        <Border x:Name="B"
                                Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="{StaticResource R12}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="B" Property="Background" Value="#1AFFFFFF"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter TargetName="B" Property="Background" Value="#12FFFFFF"/>
                            </Trigger>
                            <Trigger Property="IsEnabled" Value="False">
                                <Setter TargetName="B" Property="Opacity" Value="0.45"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="SmallGhostButton" TargetType="Button" BasedOn="{StaticResource GhostButton}">
            <Setter Property="Padding" Value="10,8"/>
            <Setter Property="FontSize" Value="12"/>
        </Style>

        <!-- Menu -->
        <Style TargetType="{x:Type Menu}">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Foreground" Value="{StaticResource Text1}"/>
        </Style>
        <Style TargetType="{x:Type MenuItem}">
            <Setter Property="Foreground" Value="{StaticResource Text1}"/>
            <Setter Property="Padding" Value="10,6"/>
        </Style>
        <Style TargetType="{x:Type Separator}">
            <Setter Property="Margin" Value="8,6"/>
            <Setter Property="Background" Value="{StaticResource Stroke}"/>
        </Style>

        <!-- DataGrid -->
        <Style x:Key="DarkDataGrid" TargetType="DataGrid">
            <Setter Property="AutoGenerateColumns" Value="False"/>
            <Setter Property="IsReadOnly" Value="True"/>
            <Setter Property="RowHeight" Value="28"/>
            <Setter Property="FontSize" Value="12"/>
            <Setter Property="Background" Value="#08111F"/>
            <Setter Property="Foreground" Value="{StaticResource Text1}"/>
            <Setter Property="BorderBrush" Value="{StaticResource Stroke}"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="GridLinesVisibility" Value="All"/>
            <Setter Property="HorizontalGridLinesBrush" Value="#182B50"/>
            <Setter Property="VerticalGridLinesBrush" Value="#182B50"/>
            <Setter Property="RowBackground" Value="#0B162A"/>
            <Setter Property="AlternatingRowBackground" Value="#08111F"/>
            <Setter Property="HeadersVisibility" Value="All"/>
            <Setter Property="ColumnHeaderHeight" Value="34"/>
            <Setter Property="RowHeaderWidth" Value="46"/>
            <Setter Property="Margin" Value="0"/>
        </Style>

        <Style TargetType="DataGridColumnHeader">
            <Setter Property="Background" Value="#0F1A2E"/>
            <Setter Property="Foreground" Value="{StaticResource Text2}"/>
            <Setter Property="BorderBrush" Value="{StaticResource Stroke}"/>
            <Setter Property="BorderThickness" Value="0,0,0,1"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
        </Style>

        <!-- Warning -->
        <Style x:Key="WarningTextStyle" TargetType="TextBlock">
            <Setter Property="Foreground" Value="#FFB84D"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="FontSize" Value="11"/>
            <Setter Property="TextWrapping" Value="Wrap"/>
            <Setter Property="Margin" Value="0,8,0,0"/>
        </Style>
    </Window.Resources>

    <Window.Background>
        <RadialGradientBrush Center="0.2,0.1" GradientOrigin="0.2,0.1" RadiusX="1.1" RadiusY="1.0">
            <GradientStop Color="#16264A" Offset="0"/>
            <GradientStop Color="#0B1220" Offset="0.55"/>
            <GradientStop Color="#070C16" Offset="1"/>
        </RadialGradientBrush>
    </Window.Background>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Top bar with menu -->
        <Border Grid.Row="0" Background="#0B1428" BorderBrush="{StaticResource Stroke}" BorderThickness="0,0,0,1">
            <DockPanel Margin="12,8">
                <TextBlock Text="Coordinate Descent • 3D" FontWeight="SemiBold" FontSize="14" DockPanel.Dock="Left"/>
                <Menu DockPanel.Dock="Right">
                    <MenuItem Header="Файл">
                        <MenuItem Header="Найти экстремум" Foreground="#FF08111F" Click="Calculate_Click" InputGestureText="F5"/>
                        <MenuItem Header="Примеры" Foreground="#FF08111F" Click="btnExamples_Click"/>
                        <Separator/>
                        <MenuItem Header="Очистить всё" Foreground="#FF08111F" Click="Clear_Click"/>
                        <Separator/>
                        <MenuItem Header="Выход" Foreground="#FF08111F" Click="Exit_Click"/>
                    </MenuItem>

                    <MenuItem Header="Вид">
                        <MenuItem Header="Сбросить вид 3D" Foreground="#FF08111F" Click="btnResetView_Click"/>
                        <MenuItem Header="Переключить камеру" Foreground="#FF08111F" Click="btnToggleCamera_Click"/>
                        <MenuItem Header="Управление 3D графиком" Foreground="#FF08111F" Click="Show3DControlsHelp_Click"/>
                        <Separator/>
                        <MenuItem Header="Показать сетку" Foreground="#FF08111F" IsCheckable="True" Name="miShowGrid" IsChecked="True" Click="btnToggleGrid_Click"/>
                        <MenuItem Header="Показать поверхность" Foreground="#FF08111F" IsCheckable="True" Name="miShowSurface" IsChecked="True" Click="btnToggleSurface_Click"/>
                        <MenuItem Header="Показать траекторию" Foreground="#FF08111F" IsCheckable="True" Name="miShowTrajectory" IsChecked="True" Click="btnToggleTrajectory_Click"/>
                        <MenuItem Header="Показать изолинии" Foreground="#FF08111F" IsCheckable="True" Name="miShowContours" IsChecked="True" Click="btnToggleContours_Click"/>
                    </MenuItem>

                    <MenuItem Header="Справка">
                        <MenuItem Header="О методе" Foreground="#FF08111F" Click="AboutMethod_Click"/>
                        <MenuItem Header="Синтаксис функций" Foreground="#FF08111F" Click="HelpSyntax_Click"/>
                        <MenuItem Header="Управление 3D графиком" Foreground="#FF08111F" Click="Show3DControlsHelp_Click"/>
                    </MenuItem>
                </Menu>
            </DockPanel>
        </Border>

        <!-- Main content -->
        <Grid Grid.Row="1" Margin="16">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="420"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- LEFT -->
            <ScrollViewer Grid.Column="0" VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Disabled">
                <StackPanel>

                    <!-- Header card -->
                    <Border Style="{StaticResource CardBorder}" Padding="16" Margin="0,0,0,14">
                        <StackPanel>
                            <TextBlock Text="Метод покоординатного спуска" FontSize="18" FontWeight="SemiBold"/>
                            <TextBlock Text="Экстремум функции двух переменных с 3D визуализацией"
                                       Foreground="{StaticResource Text2}" Margin="0,6,0,0" TextWrapping="Wrap"/>
                        </StackPanel>
                    </Border>

                    <!-- Function & params -->
                    <Border Style="{StaticResource CardBorder}" Margin="0,0,0,14">
                        <StackPanel>
                            <TextBlock Text="Функция и параметры" Foreground="{StaticResource Text2}" Margin="0,0,0,10"/>

                            <TextBlock Text="Функция f(x,y)" Style="{StaticResource FieldCaption}"/>
                            <TextBox x:Name="txtFunction" Style="{StaticResource FieldBox}" Text="x^2 + y^2" Margin="0,0,0,6"/>
                            <TextBlock Text="Подсказка: x^2, sin(x), exp(y), pow(x,2)"
                                       Foreground="{StaticResource Text2}" FontSize="11" Margin="0,0,0,10" TextWrapping="Wrap"/>

                            <TextBlock Text="Тип экстремума" Style="{StaticResource FieldCaption}"/>
                            <ComboBox x:Name="cmbExtremumType" Style="{StaticResource FieldCombo}" Width="180" Margin="0,0,0,10">
                                <ComboBoxItem Content="Минимум" Foreground="#FF08111F" IsSelected="True"/>
                                <ComboBoxItem Content="Максимум" Foreground="#FF08111F"/>
                            </ComboBox>

                            <TextBlock Text="Интервал X" Style="{StaticResource FieldCaption}"/>
                            <Grid Margin="0,0,0,10">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="12"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                <TextBox x:Name="txtXStart" Style="{StaticResource FieldBox}" Text="-2"/>
                                <TextBox x:Name="txtXEnd" Style="{StaticResource FieldBox}" Text="2" Grid.Column="2"/>
                            </Grid>

                            <TextBlock Text="Интервал Y" Style="{StaticResource FieldCaption}"/>
                            <Grid Margin="0,0,0,10">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="12"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                <TextBox x:Name="txtYStart" Style="{StaticResource FieldBox}" Text="-2"/>
                                <TextBox x:Name="txtYEnd" Style="{StaticResource FieldBox}" Text="2" Grid.Column="2"/>
                            </Grid>

                            <TextBlock Text="Начальная точка (опционально)" Style="{StaticResource FieldCaption}"/>
                            <Grid Margin="0,0,0,10">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="12"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                <TextBox x:Name="txtStartX" Style="{StaticResource FieldBox}" Text=""
                                         ToolTip="Начальная X (пусто = центр интервала)"/>
                                <TextBox x:Name="txtStartY" Style="{StaticResource FieldBox}" Text=""
                                         Grid.Column="2"
                                         ToolTip="Начальная Y (пусто = центр интервала)"/>
                            </Grid>

                            <TextBlock Text="Параметры алгоритма" Style="{StaticResource FieldCaption}"/>
                            <Grid Margin="0,0,0,12">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="12"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                <TextBox x:Name="txtEpsilon" Style="{StaticResource FieldBox}" Text="0.001"/>
                                <TextBox x:Name="txtLambda" Style="{StaticResource FieldBox}" Text="1.0" Grid.Column="2"
                                         ToolTip="Длина шага поиска (λ)"/>
                            </Grid>

                            <TextBlock Text="Макс. итераций" Style="{StaticResource FieldCaption}"/>
                            <TextBox x:Name="txtMaxIterations" Style="{StaticResource FieldBox}" Text="100"/>

                            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,14,0,0">
                                <Button x:Name="btnExamples" Content="Примеры" Click="btnExamples_Click"
                                        Style="{StaticResource GhostButton}" MinWidth="100" Margin="0,0,10,0"/>
                                <Button x:Name="btnClear" Content="Очистить" Click="Clear_Click"
                                        Style="{StaticResource GhostButton}" MinWidth="100" Margin="0,0,10,0"/>
                                <Button x:Name="btnCalculate" Content="Найти экстремум" Click="Calculate_Click"
                                        Style="{StaticResource PrimaryButton}" MinWidth="150"/>
                            </StackPanel>
                        </StackPanel>
                    </Border>

                    <!-- Results -->
                    <Border Style="{StaticResource CardBorder}" Margin="0,0,0,14">
                        <StackPanel>
                            <TextBlock Text="Результаты" Foreground="{StaticResource Text2}" Margin="0,0,0,10"/>

                            <Grid>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                </Grid.RowDefinitions>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="120"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>

                                <TextBlock Grid.Row="0" Grid.Column="0" Text="Экстремум" Foreground="{StaticResource Text2}"/>
                                <TextBlock Grid.Row="0" Grid.Column="1" x:Name="lblExtremumType" Text="-" FontWeight="SemiBold"/>

                                <TextBlock Grid.Row="1" Grid.Column="0" Text="Точка" Foreground="{StaticResource Text2}" Margin="0,8,0,0"/>
                                <TextBlock Grid.Row="1" Grid.Column="1" x:Name="lblPoint" Text="(-, -)" Margin="0,8,0,0" FontWeight="SemiBold"/>

                                <TextBlock Grid.Row="2" Grid.Column="0" Text="Значение" Foreground="{StaticResource Text2}" Margin="0,8,0,0"/>
                                <TextBlock Grid.Row="2" Grid.Column="1" x:Name="lblValue" Text="-" Margin="0,8,0,0" FontWeight="SemiBold"/>

                                <TextBlock Grid.Row="3" Grid.Column="0" Text="Итераций" Foreground="{StaticResource Text2}" Margin="0,8,0,0"/>
                                <TextBlock Grid.Row="3" Grid.Column="1" x:Name="lblIterations" Text="-" Margin="0,8,0,0" FontWeight="SemiBold"/>

                                <TextBlock Grid.Row="4" Grid.Column="0" Text="Статус" Foreground="{StaticResource Text2}" Margin="0,8,0,0"/>
                                <TextBlock Grid.Row="4" Grid.Column="1" x:Name="lblStatus" Text="-" Margin="0,8,0,0" FontWeight="SemiBold"/>

                                <TextBlock Grid.Row="5" Grid.Column="1" x:Name="lblWarning"
                                           Style="{StaticResource WarningTextStyle}"
                                           Visibility="Collapsed"/>
                            </Grid>
                        </StackPanel>
                    </Border>

                    <!-- Iterations -->
                    <Border Style="{StaticResource CardBorder}">
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="*"/>
                            </Grid.RowDefinitions>

                            <TextBlock Text="История итераций" Foreground="{StaticResource Text2}" Margin="0,0,0,10"/>
                            <DataGrid x:Name="dgIterations"
                                      Grid.Row="1"
                                      Style="{StaticResource DarkDataGrid}"
                                      MinHeight="180">
                                <DataGrid.Columns>
                                    <DataGridTextColumn Header="Шаг" Binding="{Binding Iteration}" Width="50"/>
                                    <DataGridTextColumn Header="X" Binding="{Binding X, StringFormat=F4}" Width="80"/>
                                    <DataGridTextColumn Header="Y" Binding="{Binding Y, StringFormat=F4}" Width="80"/>
                                    <DataGridTextColumn Header="f(x,y)" Binding="{Binding Value, StringFormat=F6}" Width="95"/>
                                    <DataGridTextColumn Header="ΔX" Binding="{Binding DeltaX, StringFormat=E2}" Width="80"/>
                                    <DataGridTextColumn Header="ΔY" Binding="{Binding DeltaY, StringFormat=E2}" Width="80"/>
                                    <DataGridTextColumn Header="Направ." Binding="{Binding Direction}" Width="80"/>
                                </DataGrid.Columns>
                            </DataGrid>
                        </Grid>
                    </Border>

                </StackPanel>
            </ScrollViewer>

            <!-- RIGHT -->
            <Grid Grid.Column="1" Margin="14,0,0,0">
                <Grid.RowDefinitions>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="240"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <!-- 3D viewport -->
                <Border Grid.Row="0" Style="{StaticResource CardBorder}" Padding="12" Margin="0,0,0,14">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                        </Grid.RowDefinitions>

                        <DockPanel Grid.Row="0" Margin="6,4,6,10">
                            <TextBlock Text="3D визуализация" FontWeight="SemiBold" FontSize="14" DockPanel.Dock="Left"/>
                            <TextBlock Text="HelixToolkit" Foreground="{StaticResource Text2}" DockPanel.Dock="Right"/>
                        </DockPanel>

                        <Border Grid.Row="1" Background="#08111F" BorderBrush="{StaticResource Stroke}" BorderThickness="1" CornerRadius="10" Padding="6">
                            <h:HelixViewport3D x:Name="viewport3D"
                                              ZoomExtentsWhenLoaded="True"
                                              ShowViewCube="True"
                                              ShowCoordinateSystem="True"
                                              CameraMode="Inspect"
                                              CameraRotationMode="Turntable"
                                              RotateGesture="LeftClick"
                                              PanGesture="MiddleClick"
                                              ZoomGesture="RightClick"
                                              ZoomAroundMouseDownPoint="True"
                                              RotateAroundMouseDownPoint="True"
                                              Background="Transparent">
                                <h:SunLight/>
                                <h:DefaultLights/>
                            </h:HelixViewport3D>
                        </Border>
                    </Grid>
                </Border>

                <!-- Convergence -->
                <Border Grid.Row="1" Style="{StaticResource CardBorder}" Padding="12" Margin="0,0,0,14">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                        </Grid.RowDefinitions>

                        <DockPanel Grid.Row="0" Margin="6,4,6,10">
                            <TextBlock Text="График сходимости" FontWeight="SemiBold" FontSize="14" DockPanel.Dock="Left"/>
                            <TextBlock Text="Canvas" Foreground="{StaticResource Text2}" DockPanel.Dock="Right"/>
                        </DockPanel>

                        <Border Grid.Row="1" Background="#08111F" BorderBrush="{StaticResource Stroke}" BorderThickness="1" CornerRadius="10" Padding="8">
                            <Canvas x:Name="canvasConvergence" Background="Transparent" Height="180"/>
                        </Border>
                    </Grid>
                </Border>

                <!-- Controls -->
                <Border Grid.Row="2" Style="{StaticResource CardBorder}" Padding="12">
                    <StackPanel>
                        <TextBlock Text="Управление отображением" Foreground="{StaticResource Text2}" Margin="0,0,0,10"/>

                        <WrapPanel HorizontalAlignment="Center">
                            <Button x:Name="btnResetView" Content="Сбросить вид" Click="btnResetView_Click"
                                    Style="{StaticResource SmallGhostButton}" MinWidth="120" Margin="0,0,10,10"/>
                            <Button x:Name="btnToggleCamera" Content="Режим: Inspect" Click="btnToggleCamera_Click"
                                    Style="{StaticResource SmallGhostButton}" MinWidth="140" Margin="0,0,10,10"/>
                            <Button x:Name="btnToggleGrid" Content="Сетка" Click="btnToggleGrid_Click"
                                    Style="{StaticResource SmallGhostButton}" MinWidth="90" Margin="0,0,10,10"/>
                            <Button x:Name="btnToggleSurface" Content="Поверхность" Click="btnToggleSurface_Click"
                                    Style="{StaticResource SmallGhostButton}" MinWidth="130" Margin="0,0,10,10"/>
                            <Button x:Name="btnToggleTrajectory" Content="Траектория" Click="btnToggleTrajectory_Click"
                                    Style="{StaticResource SmallGhostButton}" MinWidth="120" Margin="0,0,10,10"/>
                            <Button x:Name="btnToggleContours" Content="Изолинии" Click="btnToggleContours_Click"
                                    Style="{StaticResource SmallGhostButton}" MinWidth="110" Margin="0,0,10,10"/>
                        </WrapPanel>
                    </StackPanel>
                </Border>
            </Grid>
        </Grid>
    </Grid>
</Window>
