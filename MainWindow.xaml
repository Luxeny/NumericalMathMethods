<Window x:Class="WpfApp1.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp1"
        mc:Ignorable="d"
        Title="Math Lab • Меню"
        Height="1077" Width="1920"
        WindowStartupLocation="CenterScreen"
        FontFamily="Segoe UI">

    <Window.Resources>
        <!-- Same palette as in Bisection window -->
        <Color x:Key="C_Bg0">#0B1220</Color>
        <Color x:Key="C_Bg1">#0F1A2E</Color>
        <Color x:Key="C_Card">#121F39</Color>
        <Color x:Key="C_Stroke">#233A66</Color>
        <Color x:Key="C_Text1">#EAF0FF</Color>
        <Color x:Key="C_Text2">#A9B6D3</Color>
        <Color x:Key="C_Accent">#7C4DFF</Color>
        <Color x:Key="C_Accent2">#00D4FF</Color>

        <SolidColorBrush x:Key="Bg0" Color="{StaticResource C_Bg0}" />
        <SolidColorBrush x:Key="Bg1" Color="{StaticResource C_Bg1}" />
        <SolidColorBrush x:Key="Card" Color="{StaticResource C_Card}" />
        <SolidColorBrush x:Key="Stroke" Color="{StaticResource C_Stroke}" />
        <SolidColorBrush x:Key="Text1" Color="{StaticResource C_Text1}" />
        <SolidColorBrush x:Key="Text2" Color="{StaticResource C_Text2}" />
        <SolidColorBrush x:Key="Accent" Color="{StaticResource C_Accent}" />
        <SolidColorBrush x:Key="Accent2" Color="{StaticResource C_Accent2}" />

        <CornerRadius x:Key="R12">12</CornerRadius>

        <Style TargetType="{x:Type TextBlock}">
            <Setter Property="Foreground" Value="{StaticResource Text1}"/>
        </Style>

        <!-- Card -->
        <Style x:Key="CardBorder" TargetType="Border">
            <Setter Property="Background" Value="{StaticResource Card}"/>
            <Setter Property="BorderBrush" Value="{StaticResource Stroke}"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="CornerRadius" Value="{StaticResource R12}"/>
            <Setter Property="Padding" Value="18"/>
        </Style>

        <!-- Tile button (menu items) -->
        <Style x:Key="TileButton" TargetType="Button">
            <Setter Property="Background" Value="{StaticResource Bg1}"/>
            <Setter Property="Foreground" Value="{StaticResource Text1}"/>
            <Setter Property="BorderBrush" Value="{StaticResource Stroke}"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Padding" Value="14"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="HorizontalContentAlignment" Value="Stretch"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="{x:Type Button}">
                        <Border x:Name="B"
                                Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="{StaticResource R12}">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="10"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>

                                <Border x:Name="Stripe" Grid.Column="0" Background="{StaticResource Accent}" Opacity="0.0"
                                        CornerRadius="12,0,0,12"/>

                                <ContentPresenter Grid.Column="1" Margin="14,10"
                                                  HorizontalAlignment="Stretch"
                                                  VerticalAlignment="Center"/>
                            </Grid>
                        </Border>

                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="Stripe" Property="Opacity" Value="1"/>
                                <Setter TargetName="B" Property="Effect">
                                    <Setter.Value>
                                        <DropShadowEffect BlurRadius="18" ShadowDepth="0" Color="#55233A66"/>
                                    </Setter.Value>
                                </Setter>
                                <Setter TargetName="B" Property="Background" Value="#142749"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter TargetName="B" Property="Opacity" Value="0.88"/>
                            </Trigger>
                            <Trigger Property="IsEnabled" Value="False">
                                <Setter TargetName="B" Property="Opacity" Value="0.45"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="TitleText" TargetType="TextBlock">
            <Setter Property="FontSize" Value="22"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
        </Style>

        <Style x:Key="SubtitleText" TargetType="TextBlock">
            <Setter Property="Foreground" Value="{StaticResource Text2}"/>
            <Setter Property="FontSize" Value="13"/>
        </Style>
    </Window.Resources>

    <Window.Background>
        <RadialGradientBrush Center="0.2,0.1" GradientOrigin="0.2,0.1" RadiusX="1.1" RadiusY="1.0">
            <GradientStop Color="#16264A" Offset="0"/>
            <GradientStop Color="#0B1220" Offset="0.55"/>
            <GradientStop Color="#070C16" Offset="1"/>
        </RadialGradientBrush>
    </Window.Background>

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="320"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <!-- Left rail -->
        <Border Grid.Column="0" Background="#0B1428" BorderBrush="{StaticResource Stroke}" BorderThickness="0,0,1,0">
            <DockPanel Margin="16" LastChildFill="True">

                <StackPanel DockPanel.Dock="Top" Margin="0,0,0,14">
                    <TextBlock Text="Math Calculator" FontSize="22" FontWeight="SemiBold"/>
                    <TextBlock Text="Набор численных методов и задач" Foreground="{StaticResource Text2}" Margin="0,6,0,0"/>
                </StackPanel>

                <Border Style="{StaticResource CardBorder}" Padding="14" Margin="0,0,0,14">
                    <StackPanel>
                        <TextBlock Text="О программе" Foreground="{StaticResource Text2}" Margin="0,0,0,8"/>
                        <TextBlock Text="Программа предлагает различные математические модули на любой вкус) Развлекайтесь!"
                                   TextWrapping="Wrap" Opacity="0.95"/>
                    </StackPanel>
                </Border>
            </DockPanel>
        </Border>

        <!-- Main area -->
        <Grid Grid.Column="1" Margin="18">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- Header -->
            <Border Grid.Row="0" Style="{StaticResource CardBorder}" Padding="16" Margin="0,0,0,14">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>
                    <StackPanel>
                        <TextBlock Text="Главное меню" Style="{StaticResource TitleText}" Foreground="White"/>
                        <TextBlock Text="Запуск модулей (численные методы / алгоритмы)" Style="{StaticResource SubtitleText}" Margin="0,6,0,0"/>
                    </StackPanel>
                </Grid>
            </Border>

            <!-- Tiles -->
            <UniformGrid Grid.Row="1" Columns="2" Rows="4" Margin="0,0,0,14">
                <Button Style="{StaticResource TileButton}" Click="Button_ClickDichotomy" Margin="0,0,12,12">
                    <StackPanel>
                        <TextBlock Text="Метод дихотомии" FontSize="16" FontWeight="SemiBold"/>
                        <TextBlock Text="Поиск корня уравнения f(x)=0" Foreground="{StaticResource Text2}" Margin="0,6,0,0"/>
                    </StackPanel>
                </Button>

                <Button Style="{StaticResource TileButton}" Click="Button_ClickSLAE" Margin="0,0,0,12">
                    <StackPanel>
                        <TextBlock Text="Решение СЛАУ" FontSize="16" FontWeight="SemiBold"/>
                        <TextBlock Text="Методы для систем линейных уравнений" Foreground="{StaticResource Text2}" Margin="0,6,0,0"/>
                    </StackPanel>
                </Button>

                <Button Style="{StaticResource TileButton}" Click="Button_ClickGolden" Margin="0,0,12,12">
                    <StackPanel>
                        <TextBlock Text="Золотое сечение" FontSize="16" FontWeight="SemiBold"/>
                        <TextBlock Text="Одномерная оптимизация" Foreground="{StaticResource Text2}" Margin="0,6,0,0"/>
                    </StackPanel>
                </Button>

                <Button Style="{StaticResource TileButton}" Click="Button_ClickNewton" Margin="0,0,0,12">
                    <StackPanel>
                        <TextBlock Text="Метод Ньютона" FontSize="16" FontWeight="SemiBold"/>
                        <TextBlock Text="Нахождение корней / уточнение" Foreground="{StaticResource Text2}" Margin="0,6,0,0"/>
                    </StackPanel>
                </Button>

                <Button Style="{StaticResource TileButton}" Click="Button_ClickCoordinate" Margin="0,0,12,12">
                    <StackPanel>
                        <TextBlock Text="Покоординатный спуск" FontSize="16" FontWeight="SemiBold"/>
                        <TextBlock Text="Оптимизация по координатам" Foreground="{StaticResource Text2}" Margin="0,6,0,0"/>
                    </StackPanel>
                </Button>

                <Button Style="{StaticResource TileButton}" Click="Button_ClickLeast" Margin="0,0,0,12">
                    <StackPanel>
                        <TextBlock Text="Наименьшие квадраты" FontSize="16" FontWeight="SemiBold"/>
                        <TextBlock Text="Аппроксимация / регрессия" Foreground="{StaticResource Text2}" Margin="0,6,0,0"/>
                    </StackPanel>
                </Button>

                <Button Style="{StaticResource TileButton}" Click="Button_ClickSorting" Margin="0,0,12,0">
                    <StackPanel>
                        <TextBlock Text="Олимпиадные сортировки" FontSize="16" FontWeight="SemiBold"/>
                        <TextBlock Text="Набор алгоритмов сортировки" Foreground="{StaticResource Text2}" Margin="0,6,0,0"/>
                    </StackPanel>
                </Button>

                <Button Style="{StaticResource TileButton}" Click="Button_ClickIntegral" Margin="0,0,0,0">
                    <StackPanel>
                        <TextBlock Text="Решение интеграла" FontSize="16" FontWeight="SemiBold"/>
                        <TextBlock Text="Численное интегрирование" Foreground="{StaticResource Text2}" Margin="0,6,0,0"/>
                    </StackPanel>
                </Button>
            </UniformGrid>

            <!-- Footer -->
            <Border Grid.Row="2" Style="{StaticResource CardBorder}" Padding="12">
                <DockPanel>
                    <TextBlock Text="Выберите модуль для запуска" Foreground="{StaticResource Text2}" DockPanel.Dock="Left"/>
                </DockPanel>
            </Border>
        </Grid>
    </Grid>
</Window>